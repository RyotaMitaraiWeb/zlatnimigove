---
interface Props {
  selector?: keyof HTMLElementTagNameMap;
  className?: string;
}

const { selector = 'h3', className } = Astro.props;
const Tag = selector;
---

<Tag class:list={['font-bold text-heading-3-sm md:text-heading-3-md lg:text-heading-3-lg xl:text-heading-3-xl', className]}>
  <slot />
</Tag>

